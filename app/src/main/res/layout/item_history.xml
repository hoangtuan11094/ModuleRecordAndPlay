<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="#fdfdfd"
    android:weightSum="8"
    android:gravity="center"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="50dp">
<LinearLayout
    android:gravity="center"
    android:layout_alignParentLeft="true"
    android:layout_toLeftOf="@+id/btnPlayH"
    android:layout_alignParentStart="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView

        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="#000000"
        android:textAlignment="center"
        android:lines="2"

        android:id="@+id/txtHis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         />
</LinearLayout>
    <Button
        android:layout_toLeftOf="@+id/btnDeleteH"
        android:id="@+id/btnPlayH"
        android:drawableTop="@drawable/ic_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:layout_alignParentRight="true"
        android:id="@+id/btnDeleteH"
        android:drawableTop="@drawable/ic_clear"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>